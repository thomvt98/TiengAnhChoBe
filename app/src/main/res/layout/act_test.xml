<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/study">

    <TextView
        android:id="@+id/tvTestNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Câu hỏi số 1"
        android:textColor="#ca0003"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/ivTestSound"
        android:layout_marginTop="10dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:src="@drawable/sound" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/zebra" />

        <ImageView
            android:id="@+id/ivTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/lion" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pig" />

        <ImageView
            android:id="@+id/ivTest4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/yak" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivTestNext"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp" />
</LinearLayout>
