<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#f5f5dc"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bangchu"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/logochuv"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_bangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Bảng chữ"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_number"
                android:layout_width="100dp"
                android:layout_height="78dp"
                android:src="@drawable/logoso"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_sodem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Số đếm"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dongvat"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/logodv"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtdongvat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Động vật"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mauxac"
                android:layout_width="100dp"
                android:layout_height="78dp"
                android:src="@drawable/logomau"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtmausac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Màu sắc"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_truonghoc"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/logotruong"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_truonghoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Trường học"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_quocgiav"
                android:layout_width="100dp"
                android:layout_height="78dp"
                android:src="@drawable/logoqg"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_quocgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Quốc gia"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qua"
                android:layout_width="100dp"
                android:src="@drawable/logoqua"
                android:layout_height="80dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_qua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Qủa"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hoa"
                android:layout_width="100dp"
                android:src="@drawable/logohoa"
                android:layout_height="78dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_hoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Hoa"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

    </TableRow>

</LinearLayout>