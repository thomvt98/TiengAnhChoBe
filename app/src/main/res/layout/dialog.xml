<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#efb5ef">

    <ImageView
        android:id="@+id/ivdialogtestexit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/exittest"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="26dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvFinishT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Test 1"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#1b1717" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconsmile"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivdialogtestback"
            android:layout_marginRight="60dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/ivdialogtestnext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/next" />

    </LinearLayout>
</LinearLayout>
